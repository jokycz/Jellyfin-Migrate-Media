        </Grid>

        <!-- Footer -->
        <Grid Grid.Row="2" Margin="0,14,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" Content="Zpět" Width="90" Margin="0,0,8,0" Command="{Binding BackCommand}"/>
            <Button Grid.Column="2" Content="Další" Width="90" Margin="0,0,8,0" Command="{Binding NextCommand}" Visibility="{Binding IsNotLastStep, Converter={StaticResource BoolToVis}}"/>
            <Button Grid.Column="3" Content="Uložit" Width="90" IsDefault="True" Click="Save_Click" Visibility="{Binding IsLastStep, Converter={StaticResource BoolToVis}}"/>
        </Grid>
    </Grid>
</Window>

