<Window x:Class="JellyfinMigrateMedia.MigrationWizardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Migration wizard" Height="520" Width="860"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Krok: " FontWeight="SemiBold"/>
            <TextBlock Text="{Binding StepNumber}"/>
            <TextBlock Text=" / " />
            <TextBlock Text="{Binding TotalSteps}" />
        </StackPanel>

        <!-- Step 0: Cíl -->
        <Grid Grid.Row="1" Visibility="{Binding IsStep0, Converter={StaticResource BoolToVis}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="1) Cíl migrace" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>

            <Grid Grid.Row="1" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Název profilu:"/>
                <TextBox Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Cílový root (kam):"/>
                <TextBox Grid.Column="1" Text="{Binding TargetPath, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,8,0"/>
                <Button Grid.Column="2" Content="Vybrat..." Width="90" Click="BrowseOutput_Click"/>
            </Grid>
        </Grid>

        <!-- Step 1: Zdroj -->
        <Grid Grid.Row="1" Visibility="{Binding IsStep1, Converter={StaticResource BoolToVis}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="2) Zdroj migrace (media type + složka + disk)" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>

            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding Sources}"
                      SelectedItem="{Binding SelectedSource}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Margin="0,0,0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Knihovna" Binding="{Binding LibraryName, UpdateSourceTrigger=PropertyChanged}" Width="220"/>
                    <DataGridTextColumn Header="Typ" Binding="{Binding ContentType, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                    <DataGridTextColumn Header="Zdrojová složka" Binding="{Binding SourcePath, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="Přidat zdroj" Width="120" Margin="0,0,8,0" Command="{Binding AddSourceCommand}"/>
                <Button Content="Odebrat vybraný" Width="140" Command="{Binding RemoveSelectedSourceCommand}"/>
                <Button Content="Vybrat složku..." Width="130" Margin="8,0,0,0" Click="BrowseSource_Click"/>
            </StackPanel>
        </Grid>

        <!-- Step 2: Maskování / struktura -->
        <Grid Grid.Row="1" Visibility="{Binding IsStep2, Converter={StaticResource BoolToVis}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="3) Maskování názvů a struktura složek" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>

            <!-- Movie masks -->
            <StackPanel Grid.Row="1" Margin="0,0,0,10" Visibility="{Binding IsMovieContent, Converter={StaticResource BoolToVis}}">
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Movie folder template:"/>
                    <TextBox Grid.Column="1" Text="{Binding MovieFolderTemplate, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Movie file template:"/>
                    <TextBox Grid.Column="1" Text="{Binding MovieFileTemplate, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
            </StackPanel>

            <!-- Series masks -->
            <StackPanel Grid.Row="2" Margin="0,0,0,10" Visibility="{Binding IsSeriesContent, Converter={StaticResource BoolToVis}}">
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Series folder template:"/>
                    <TextBox Grid.Column="1" Text="{Binding SeriesFolderTemplate, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Episode file template:"/>
                    <TextBox Grid.Column="1" Text="{Binding EpisodeFileTemplate, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
            </StackPanel>

            <CheckBox Grid.Row="5" Content="Sanitize názvy (nahradí neplatné znaky)" IsChecked="{Binding SanitizeFileAndFolderNames}"/>

